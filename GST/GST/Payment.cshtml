@{
    Layout = "_Layout.cshtml";
}
<div class="sechead pb5 fs14 mt20 "><h4><b>Payment</b></h4></div>
<div class="container mt-5">
    <div class="container mt-5">

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Plot ID</label>
                    <select class="form-control" id="PlotNo">
                    </select>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="form-group">
                    <div class="form-group">
                        <label>CustomerID</label>
                        <select class="form-control" id="Name">
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="form-group">
                    <label for="inputAddress2">Cheque No</label>
                    <input type="number" class="form-control" id="ChequeNo">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label>Bank</label>
                <input type="text" class="form-control" id="Bank">
            </div>
            <div class="col-md-4 ">
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" class="form-control" id="Date">
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="form-group">
                    <label for="inputAddress2">SI No</label>
                    <input type="text" class="form-control" id="SINo">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col col-md-1">
                <button type="button" class="btn btn-primary" onclick="saveData();">Save</button>
            </div>
            <div class="col col-md-1">
                <button type="button" class="btn btn-danger" onclick="goBack();">Cancel</button>
            </div>
        </div>

    </div>
  
</div>

@section scripts{
    <script type="text/javascript">
          var id = querySt("id");

        $(function () {
            init();
        })

        async function init() {
            await PlotIDDropDownAll();
            await CustomerIDDropDownAll();
            if (id) {
                GetById();
            }
        }

        function PlotIDDropDownAll() {
            return new Promise((result, error) => {
                ajaxcall.get({
                    url: AppConfig.ApiPath + "Plot/PlotIDDropDownAll"
                }).then((res) => {
                    if (res) {
                        for (var i in res) {
                            $("<option>").val(res[i].value).text(res[i].label).appendTo("#PlotNo");
                        }
                    }
                    result();
                }, err => error(err));
            });
        }

        function CustomerIDDropDownAll() {
            return new Promise((result, error) => {
                ajaxcall.get({
                    url: AppConfig.ApiPath + "Customer/CustomerIDDropDownAll"
                }).then((res) => {
                    if (res) {
                        for (var i in res) {
                            $("<option>").val(res[i].value).text(res[i].label).appendTo("#Name");
                        }
                    }
                    result();
                }, err => error(err));
            });
        }

        function GetById() {
            ajaxcall.post({
                url: AppConfig.ApiPath + "Payment/GetById",
                data: { "Id": id }
            }).then(function (res) {

                if (res) {
                    $("#PlotNo").val(res.PlotNo);
                    $("#Name").val(res.Name);
                    $("#ChequeNo").val(res.ChequeNo);
                    $("#Bank").val(res.Bank);
                    $("#Date").val(res.Dateformate);
                    $("#SINo").val(res.SINo);
                }

            })
        }

        function saveData() {

            if (!$("#ChequeNo").val()) {
                alert('Please enter Cheque No');
                $("#ChequeNo").focus()
                return false;
            }

           if (!$("#Bank").val()) {
                alert('Please enter Bank Name');
                $("#Bank").focus()
                return false;
            }

            if (!$("#Date").val()) {
                alert('Please enter Date');
                $("#Date").focus()
                return false;
            }

            if (!$("#SINo").val()) {
                alert('Please enter SI NO');
                $("#SINo").focus()
                return false;
            }

            ajaxcall.post({
                url: AppConfig.ApiPath + "Payment/AddData",
                data: {
                    Id: id,
                    PlotNo: $("#PlotNo").val(),
                    Name: $("#Name").val(),
                    ChequeNo: $("#ChequeNo").val(),
                    Bank: $("#Bank").val(),
                    Date: $("#Date").val(),
                    SINo: $("#SINo").val()
                }
            }).then(res => {
                alert("Saved successfully");
                 window.history.back();
            }, err => {
                alert(err.responseJSON);
            })
        }
        function goBack() {
                 window.history.back();
        }
    </script>
}