@section scripts{
    <script type="text/javascript">
        var id = querySt("id");
        $(function () {
            init();
        })

        async function init() {
            await SiteNameDropDownAll();
            if (id) {
                GetById();
            }
        }

        function SiteNameDropDownAll() {
            return new Promise((result, error) => {
                ajaxcall.get({
                    url: AppConfig.ApiPath + "Site/SiteNameDropDownAll"
                }).then((res) => {
                    if (res) {
                        for (var i in res) {
                            $("<option>").val(res[i].value).text(res[i].label).appendTo("#SiteName");
                        }
                    }
                    result();
                }, err => error(err));
            });
        }

        function GetById() {
            ajaxcall.post({
                url: AppConfig.ApiPath + "Plot/GetById",
                data: { "Id": id }
            }).then(function (res) {
                if (res) {
                    $("#SiteName").val(res.SiteName);
                    $("#PlotNo").val(res.PlotNo);
                    $("#Floor").val(res.Floor);
                    $("#CarpetArea").val(res.CarpetArea);
                    $("#ConstructionArea").val(res.ConstructionArea);
                    $("#UndividedLand").val(res.UndividedLand);
                    $("#UndividedLandCommArea").val(res.UndividedLandCommArea);
                    $("#ProportionateLand").val(res.ProportionateLand);
                    $("#SuperBuildUp").val(res.SuperBuildUp);
                    $("#DirectionsNorth").val(res.DirectionsNorth);
                    $("#DirectionsSouth").val(res.DirectionsSouth);
                    $("#DirectionsEast").val(res.DirectionsEast);
                    $("#DirectionsWest").val(res.DirectionsWest);
                    $("#SellAmount").val(res.SellAmount);
                    $("#Installments").val(res.Installments);
                }

            })
        }

        function saveData() {

            if (!$("#PlotNo").val()) {
                alert('Please enter Plot Number');
                $("#PlotNo").focus()
                return false;
            }

            if (!$("#CarpetArea").val()) {
                alert('Please enter Carpet Area');
                $("#CarpetArea").focus()
                return false;
            }
            if (!$("#ConstructionArea").val()) {
                alert('Please enterConstruction Area');
                $("#ConstructionArea").focus()
                return false;
            }
            if (!$("#UndividedLand").val()) {
                alert('Please enter UndividedLand');
                $("#UndividedLand").focus()
                return false;
            }
            if (!$("#UndividedLandCommArea").val()) {
                alert('Please enter UndividedLandCommArea');
                $("#UndividedLandCommArea").focus()
                return false;
            }
            if (!$("#ProportionateLand").val()) {
                alert('Please enter ProportionateLand');
                $("#ProportionateLand").focus()
                return false;
            }
            if (!$("#SuperBuildUp").val()) {
                alert('Please enter SuperBuildUp');
                $("#SuperBuildUp").focus()
                return false;
            }

            if (!$("#DirectionsNorth").val()) {
                alert('Please enter Directions North');
                $("#DirectionsNorth").focus()
                return false;
            }

            if (!$("#DirectionsSouth").val()) {
                alert('Please enter Directions South');
                $("#DirectionsSouth").focus()
                return false;
            }

            if (!$("#DirectionsEast").val()) {
                alert('Please enter Directions East');
                $("#PlotNo").focus()
                return false;
            }

            if (!$("#DirectionsWest").val()) {
                alert('Please enter Directions West');
                $("#DirectionsWest").focus()
                return false;
            }

            @*if (!$("#SellAmount").val()) {
                alert('Please enter Sell Amount');
                $("#SellAmount").focus()
                return false;
            }*@

            ajaxcall.post({
                url: AppConfig.ApiPath + "Plot/AddData",
                data: {
                    Id: id,
                    //SiteName: $("#SiteName").val(),
                   // SiteID: $("#SiteID").val(),
                    PlotNo: $("#PlotNo").val(),
                    Floor: $("#Floor").val(),
                    CarpetArea: $("#CarpetArea").val(),
                    ConstructionArea: $("#ConstructionArea").val(),
                    UndividedLand: $("#UndividedLand").val(),
                    UndividedLandCommArea: $("#UndividedLandCommArea").val(),
                    ProportionateLand: $("#ProportionateLand").val(),
                    SuperBuildUp: $("#SuperBuildUp").val(),
                    DirectionsNorth: $("#DirectionsNorth").val(),
                    DirectionsSouth: $("#DirectionsSouth").val(),
                    DirectionsEast: $("#DirectionsEast").val(),
                    DirectionsWest: $("#DirectionsWest").val(),
                    //SellAmount: $("#SellAmount").val(),
                    //Installments: $("#Installments").val()
                }
            }).then(res => {
                alert("Saved successfully");
                window.history.back();
            }, err => {
                alert(err.responseJSON);
            })
        }
        function goBack() {
            window.history.back();
        }
    </script>
}