    <script type="text/javascript">
        if (localStorage['Token']) {
            var GlobalExpirydate = new Date(localStorage['.expires']);
            var GlobalCurdate = new Date();
            if (GlobalExpirydate < GlobalCurdate) {
                alert('Session expired please login again.');
                location.replace("/Login");
            }
        } else {
            location.replace("/Login");
        }
    </script>
