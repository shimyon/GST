                            <input class="txtTotalTax" name="TotalTax" type="number" required placeholder="Total Tax" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 offset-md-6">
                            <div class="form-group">
                                <select class="form-control" id="TDS">
                                    <option value="">Select TDS</option>
                                </select>
                            </div>
                        </div>
